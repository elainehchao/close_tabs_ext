{
    "manifest_version": 2,

    "name": "Tab-Away",
    "description": "This extension will help users manage out of control tab usage",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["js/background.js"]
    },
    "permissions": [
        "activeTab"
    ]
}
